<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pe.edu.ulima.persistencia.InternalActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/eteNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su nombre"/>
    <EditText
        android:id="@+id/eteApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su apellido"/>

    <EditText
        android:id="@+id/eteQuehizo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese que hizo el fin de semana"/>
    <Button
        android:id="@+id/butGuardarInternal"
        android:text="Guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
